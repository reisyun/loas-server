{
  "moduleFileExtensions": ["ts", "js"],
  "rootDir": ".",
  "verbose": true,
  "testEnvironment": "node",
  "testRegex": "test/unit/.*.spec.ts",
  "coverageDirectory": ".coverage",
  "collectCoverageFrom": ["src/**/*.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@core/(.*)$": "<rootDir>/src/core/$1",
    "@app/(.*)$": "<rootDir>/src/app/$1",
    "@infra/(.*)$": "<rootDir>/src/infra/$1",
    "@test/(.*)$": "<rootDir>/test/$1"
  }
}
